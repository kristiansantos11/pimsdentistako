        <!--txtEditMiddle-->
        <!--txtEditLast-->
        <!--txtEditSuffix-->
        <!--txtEditLicense-->
        <!--txtEditPtr-->


        <!--PANGALAN NG BUTTON-->

        <!--Confirm_btn-->
        <!--Cancel_btn-->




    </Grid>
    
</Window>
